                    <a href="~/Home/Index#iletisim" class="nav-link">İletişim</a>
                </div>

                <div class="nav-contact">
                    <a href="tel:0(538) 898 28 37" class="phone-number">
                        <i class="fas fa-phone"></i>
                        0(538) 898 28 37
                    </a>
                </div>

                <div class="nav-toggle" id="nav-toggle">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </div>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero service-hero">
        <div class="hero-container">
            <div class="hero-content">
                <h1 class="hero-title">
                    VIP Minibüs<br>
                    Kiralama
                </h1>
                <p class="hero-description">
                    Lüks ve konforlu VIP minibüsler ile özel etkinliklerinizde fark yaratın. Düğün, nişan, kına ve özel organizasyonlarınız için premium hizmet.
                </p>
                <div class="hero-buttons">
                    <a href="#contact" class="btn btn-primary">Hemen Teklif Al</a>
                    <a href="tel:0(538) 898 28 37" class="btn btn-secondary">Hemen Ara</a>
                </div>
            </div>
            <div class="hero-image">
                <img src="images/vip-minibus-hero.jpg" alt="VIP Minibüs Kiralama" class="hero-img">
            </div>
        </div>
    </section>

    <!-- Service Details -->
    <section class="service-details">
        <div class="container">
            <div class="service-content">
                <div class="service-info">
                    <h2>VIP Minibüs Kiralama Hizmetimiz</h2>
                    <p>
                        VIP minibüs kiralama hizmetimiz ile özel etkinliklerinizde lüks ve konforu bir arada sunuyoruz. Düğün, nişan, kına ve diğer özel organizasyonlarınız için premium araçlar ve profesyonel hizmet.
                    </p>

                    <h3>VIP Minibüs Avantajları</h3>
                    <ul>
                        <li>Lüks iç donanım ve konforlu koltuklar</li>
                        <li>Klima ve modern teknoloji</li>
                        <li>Profesyonel şoför kadrosu</li>
                        <li>Özel etkinliklere uygun tasarım</li>
                        <li>Sigorta ve kasko dahil</li>
                        <li>7/24 müşteri hizmetleri</li>
                        <li>Esnek kiralama süreleri</li>
                        <li>Özel rota planlaması</li>
                    </ul>
                </div>

                <div class="service-features">
                    <h3>Hizmet Kapsamımız</h3>
                    <div class="features-grid">
                        <div class="feature-item">
                            <i class="fas fa-crown"></i>
                            <h4>VIP Hizmet</h4>
                            <p>Lüks ve konfor odaklı</p>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-users"></i>
                            <h4>Kapasite</h4>
                            <p>16-20 kişilik VIP minibüsler</p>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-clock"></i>
                            <h4>Çalışma Saatleri</h4>
                            <p>7/24 hizmet</p>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-shield-alt"></i>
                            <h4>Güvenlik</h4>
                            <p>Sigorta ve kasko dahil</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @Html.Action("FooterHizmetlerimiz", "Partial")

    <script src="~/dugunservisi/dugunservisi.js"></script>
