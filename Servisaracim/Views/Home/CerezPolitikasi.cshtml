    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Çerez Politikası - Düğün Servisi</title>
    <meta name="description" content="Düğün Servisi çerez politikası ve web sitesinde kullanılan çerezler hakkında bilgilendirme.">
    @Html.Action("Head", "Partial")
